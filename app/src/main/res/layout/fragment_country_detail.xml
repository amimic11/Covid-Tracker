<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.country.countrydetail.CountryDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/micro_margin"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="@dimen/normal_margin"
            android:elevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lyt_top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/lyt_flag"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:id="@+id/country_detail"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Population"
                        android:layout_margin="@dimen/mini_margin"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:id="@+id/country_detail_population"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Updated"
                        android:layout_margin="@dimen/mini_margin"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:id="@+id/country_detail_update"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lyt_flag"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/normal_margin"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_marginBottom="@dimen/normal_margin"
                        app:cardCornerRadius="10dp"
                        android:elevation="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:scaleType="fitXY"
                            android:id="@+id/img_country_detail_flag"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="@dimen/mini_margin"
                            android:scaleType="fitXY"
                            android:id="@+id/img_country_detail_continent"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mini_margin"
                app:cardCornerRadius="10dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/micro_margin">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Cases"
                            android:textColor="@android:color/holo_orange_dark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/holo_orange_dark"
                            android:id="@+id/txt_country_cases"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/holo_orange_dark"
                            android:id="@+id/txt_country_new_cases"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Recovered"
                            android:gravity="center"
                            android:textColor="@android:color/holo_green_dark"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/holo_green_dark"
                            android:id="@+id/txt_country_recovered"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/holo_green_dark"
                            android:id="@+id/txt_country_new_recovered"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Death"
                            android:gravity="center"
                            android:textColor="@android:color/holo_red_dark"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="@android:color/holo_red_dark"
                            android:id="@+id/txt_country_death"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/holo_red_dark"
                            android:id="@+id/txt_country_new_death"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mini_margin"
                app:cardCornerRadius="10dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/micro_margin">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Test PerPeople"
                            android:textColor="@android:color/holo_orange_dark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/holo_orange_dark"
                            android:id="@+id/txt_country_test_people"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Case PerPeople"
                            android:gravity="center"
                            android:textColor="@android:color/holo_green_dark"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/holo_green_dark"
                            android:id="@+id/txt_country_case_people"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Death PerPeople"
                            android:gravity="center"
                            android:textColor="@android:color/holo_red_dark"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="@android:color/holo_red_dark"
                            android:id="@+id/txt_country_death_people"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:padding="10dp"
                android:layout_margin="@dimen/mini_margin"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="50dp"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tests"
                            android:gravity="center"
                            android:layout_alignParentTop="true"
                            android:textColor="@android:color/holo_blue_dark"
                            android:id="@+id/txt_tes"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_margin="3dp"
                            android:layout_below="@+id/txt_tes"
                            android:id="@+id/txt_country_test"
                            android:textColor="@android:color/holo_blue_dark"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="50dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tests Per OneMillion"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:textColor="@android:color/holo_blue_dark"
                            android:id="@+id/txt_tes_mil"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_margin="3dp"
                            android:id="@+id/txt_country_test_million"
                            android:layout_below="@+id/txt_tes_mil"
                            android:textColor="@android:color/holo_blue_dark"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:padding="10dp"
                android:layout_margin="@dimen/mini_margin"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="50dp"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:gravity="center"
                            android:textColor="@android:color/holo_red_light"
                            android:layout_alignParentTop="true"
                            android:id="@+id/txt_activ"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/holo_red_light"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/txt_activ"
                            android:id="@+id/txt_country_active" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="50dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Active Per OneMillion"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:textColor="@android:color/holo_red_light"
                            android:id="@+id/txt_act_mil"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/holo_red_light"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/txt_act_mil"
                            android:id="@+id/txt_country_active_million"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:padding="10dp"
                android:layout_margin="@dimen/mini_margin"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="50dp"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="critical"
                            android:gravity="center"
                            android:layout_alignParentTop="true"
                            android:textColor="@android:color/holo_orange_dark"
                            android:id="@+id/txt_cri"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_margin="3dp"
                            android:layout_below="@+id/txt_cri"
                            android:id="@+id/txt_country_critical"
                            android:textColor="@android:color/holo_orange_dark"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="50dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Critical Per OneMillion"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:textColor="@android:color/holo_orange_dark"
                            android:id="@+id/txt_cri_mil"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/holo_orange_dark"
                            android:id="@+id/txt_country_critical_million"
                            android:layout_below="@+id/txt_cri_mil"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_margin="@dimen/mini_margin"
                android:padding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="50dp"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Recovered Per OneMillion"
                            android:gravity="center"
                            android:layout_alignParentTop="true"
                            android:textColor="@android:color/holo_green_dark"
                            android:id="@+id/txt_rec"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_margin="3dp"
                            android:layout_below="@+id/txt_rec"
                            android:id="@+id/txt_country_recovered_million"
                            android:textColor="@android:color/holo_green_dark"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="50dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Death Per OneMillion"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:textColor="@android:color/holo_red_dark"
                            android:id="@+id/txt_dea_mil"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_margin="3dp"
                            android:id="@+id/txt_country_death_million"
                            android:textColor="@android:color/holo_red_dark"
                            android:layout_below="@+id/txt_dea_mil"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="@dimen/normal_margin"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mini_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cases"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textStyle="italic" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <com.db.williamchart.view.LineChartView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:chart_axis="none"
                            app:chart_lineThickness="3dp"
                            app:chart_smoothLine="true"
                            app:chart_labelsSize="10sp"
                            app:chart_labelsColor="@android:color/holo_orange_dark"
                            android:id="@+id/graph_cases"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="@dimen/normal_margin"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mini_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recovered"
                        android:textColor="@android:color/holo_green_light"
                        android:textStyle="italic" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <com.db.williamchart.view.LineChartView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:chart_axis="none"
                            app:chart_lineThickness="3dp"
                            app:chart_smoothLine="true"
                            app:chart_labelsSize="10sp"
                            app:chart_labelsColor="@android:color/holo_orange_dark"
                            android:id="@+id/graph_recovered"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="@dimen/normal_margin"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mini_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deaths"
                        android:textColor="@android:color/holo_red_dark"
                        android:textStyle="italic" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <com.db.williamchart.view.LineChartView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:chart_axis="none"
                            app:chart_lineThickness="3dp"
                            app:chart_smoothLine="true"
                            app:chart_labelsSize="10sp"
                            app:chart_labelsColor="@android:color/holo_orange_dark"
                            android:id="@+id/graph_death"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>

</ScrollView>